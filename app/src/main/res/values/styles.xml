  </style>

  <style name="TextAppearance.App.XLarge.Regular">
    <item name="android:fontFamily">@font/sf_pro_regular</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="TextAppearance.App.XXLarge.Regular">
    <item name="android:fontFamily">@font/sf_pro_regular</item>
    <item name="android:textStyle">normal</item>
  </style>

  <!--    Bold-->
  <style name="TextAppearance.App.Small.Bold">
    <item name="android:fontFamily">@font/sf_pro_bold</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextAppearance.App.Medium.Bold">
    <item name="android:fontFamily">@font/sf_pro_bold</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="TextAppearance.App.Large.Bold">
    <item name="android:fontFamily">@font/sf_pro_bold</item>
