<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:padding="20dp">

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_ugs_title"
    style="@style/TextAppearance.App.XLarge.Bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:text="@string/stations_tv_ugs_text"
    android:textColor="@color/black"
    app:layout_constraintEnd_toStartOf="@+id/tv_ugs_value"
    app:layout_constraintHorizontal_chainStyle="spread_inside"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_ugs_value"
    style="@style/TextAppearance.App.XLarge.Bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxLines="1"
    android:padding="4dp"
    android:textColor="@color/black"
    app:layout_constraintEnd_toStartOf="@+id/tv_eus_title"
    app:layout_constraintStart_toEndOf="@+id/tv_ugs_title"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="5000" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_eus_title"
    style="@style/TextAppearance.App.XLarge.Bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:padding="4dp"
    android:text="@string/stations_tv_eus_text"
    android:textColor="@color/black"
    app:layout_constraintEnd_toStartOf="@+id/tv_eus_value"
    app:layout_constraintStart_toEndOf="@+id/tv_ugs_value"
    app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_eus_value"
    style="@style/TextAppearance.App.XLarge.Bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxLines="1"
    android:padding="4dp"
    android:textColor="@color/black"
    app:layout_constraintEnd_toStartOf="@+id/tv_ds_title"
    app:layout_constraintStart_toEndOf="@+id/tv_eus_title"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="500" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_ds_title"
    style="@style/TextAppearance.App.XLarge.Bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:padding="4dp"
    android:text="@string/stations_tv_ds_text"
    android:textColor="@color/black"
    app:layout_constraintEnd_toStartOf="@+id/tv_ds_value"
    app:layout_constraintStart_toEndOf="@+id/tv_eus_value"
    app:layout_constraintTop_toTopOf="parent" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_ds_value"
    style="@style/TextAppearance.App.XLarge.Bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxLines="1"
    android:padding="4dp"
    android:textColor="@color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/tv_ds_title"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="50000" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_name"
    style="@style/TextAppearance.App.XXLarge.Bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:ellipsize="end"
    android:maxLines="1"
    android:padding="4dp"
    android:textColor="@color/black"
    app:layout_constraintBottom_toBottomOf="@+id/tv_damage"
    app:layout_constraintEnd_toStartOf="@+id/tv_damage"
    app:layout_constraintHorizontal_weight="5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_ugs_title"
    app:layout_constraintTop_toTopOf="@+id/tv_damage"
    tools:text="Name" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_damage"
    style="@style/TextAppearance.App.XLarge.Bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_point_value"
    android:gravity="center_horizontal"
    android:maxLines="1"
    android:padding="10dp"
    android:textColor="@color/black"
    app:layout_constraintEnd_toStartOf="@+id/tv_damage_time"
    app:layout_constraintHorizontal_weight="2.5"
    app:layout_constraintStart_toEndOf="@+id/tv_name"
    app:layout_constraintTop_toBottomOf="@+id/tv_ugs_title"
    tools:text="100" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_damage_time"
    style="@style/TextAppearance.App.XLarge.Bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:background="@drawable/bg_point_value"
    android:gravity="center_horizontal"
    android:maxLines="1"
    android:padding="10dp"
    android:textColor="@color/black"
    app:layout_constraintBottom_toBottomOf="@+id/tv_damage"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_weight="2.5"
    app:layout_constraintStart_toEndOf="@+id/tv_damage"
    app:layout_constraintTop_toBottomOf="@+id/tv_ugs_title"
    app:layout_constraintTop_toTopOf="@+id/tv_damage"
    tools:text="49s" />

  <com.google.android.material.textfield.TextInputEditText
    android:id="@+id/edt_search"
    style="@style/TextAppearance.App.XLarge.Regular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/bg_point_value"
    android:drawableStart="@drawable/ic_search"
    android:hint="@string/stations_edt_search_hint"
    android:imeOptions="actionGo"
    android:inputType="textCapSentences"
    android:maxLines="1"
    android:paddingStart="4dp"
    android:paddingTop="12dp"
    android:paddingBottom="10dp"
    android:textColor="@color/black"
    android:textColorHint="@color/gray"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_damage" />

  <com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/imv_arrow_back"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/rcv_stations"
    app:layout_constraintEnd_toStartOf="@+id/rcv_stations"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/rcv_stations"
    app:srcCompat="@drawable/ic_arrow_back" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_station_empty"
    style="@style/TextAppearance.App.XLarge.Bold"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:text="@string/stations_tv_empty_stations_text"
    android:textColor="@color/black"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="@+id/imv_arrow_back"
    app:layout_constraintEnd_toStartOf="@+id/imv_arrow_forward"
    app:layout_constraintStart_toEndOf="@+id/imv_arrow_back"
    app:layout_constraintTop_toBottomOf="@+id/edt_search"
    app:layout_constraintTop_toTopOf="@+id/imv_arrow_back" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rcv_stations"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    app:layout_constraintEnd_toStartOf="@+id/imv_arrow_forward"
    app:layout_constraintStart_toEndOf="@+id/imv_arrow_back"
    app:layout_constraintTop_toBottomOf="@+id/edt_search"
    tools:itemCount="5"
    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
    tools:listitem="@layout/item_station"
    tools:orientation="horizontal" />

  <com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/imv_arrow_forward"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    app:layout_constraintBottom_toBottomOf="@+id/rcv_stations"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/rcv_stations"
    app:layout_constraintTop_toTopOf="@+id/rcv_stations"
    app:srcCompat="@drawable/ic_arrow_forward" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tv_current_station"
    style="@style/TextAppearance.App.XXLarge.Bold"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:text="@string/stations_tv_initial_station_text"
    android:textColor="@color/black"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/rcv_stations" />

</androidx.constraintlayout.widget.ConstraintLayout>