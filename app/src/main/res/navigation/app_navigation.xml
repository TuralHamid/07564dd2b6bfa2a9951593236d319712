<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/app_navigation"
  app:startDestination="@id/mainFragment">

  <fragment
    android:id="@+id/mainFragment"
    android:name="com.space.challenge.view.main.MainFragment"
    android:label="fragment_note_list"
    tools:layout="@layout/fragment_main">

    <action
      android:id="@+id/act_btnContinue_to_stationsFragment"
      app:destination="@id/stationsFragment"
      app:enterAnim="@anim/slide_in_right"
      app:exitAnim="@anim/slide_out_left"
      app:popEnterAnim="@anim/slide_in_left"
      app:popExitAnim="@anim/slide_out_right" />

  </fragment>

  <fragment
    android:id="@+id/stationsFragment"
    android:name="com.space.challenge.view.stations.StationsFragment"
    android:label="fragment_note_display"
    tools:layout="@layout/fragment_stations">

  </fragment>

  <fragment
    android:id="@+id/favoritesFragment"
    android:name="com.space.challenge.view.favorites.FavoritesFragment"
    android:label="fragment_note_edit"
    tools:layout="@layout/fragment_favorites">

  </fragment>

</navigation>